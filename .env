# Jarviee 環境設定

# ディレクトリパス
JARVIEE_DATA_DIR=./data
JARVIEE_LOG_LEVEL=INFO

# LLM設定
DEFAULT_LLM_PROVIDER=local
DEFAULT_LLM_MODEL=gemma-3-12B-it-QAT-Q4_0
LOCAL_LLM_PATH=./models/gemma-3-12B-it-QAT-Q4_0.gguf

# GPU設定
USE_GPU=true
GPU_LAYERS=-1  # すべてのレイヤーをGPUで実行

# プログラミング設定
DEFAULT_CODE_LANGUAGE=python
CODE_QUALITY_CHECK=true

# 自律性設定
AUTONOMY_LEVEL=medium
ACTION_APPROVAL_REQUIRED=true

# セキュリティ設定
SECURITY_LEVEL=medium
ENABLE_ENCRYPTION=false

# APIサーバー設定
API_HOST=localhost
API_PORT=8000
