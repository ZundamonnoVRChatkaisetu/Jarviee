# Jarviee環境変数設定テンプレート
# 実際に使用する場合はこのファイルを.envとしてコピーし、適切な値を設定してください

# 基本設定
JARVIEE_ENV=development  # development, testing, production
JARVIEE_LOG_LEVEL=INFO   # DEBUG, INFO, WARNING, ERROR, CRITICAL
JARVIEE_DATA_DIR=./data  # データディレクトリパス

# LLM設定
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DEFAULT_LLM_PROVIDER=openai  # openai, anthropic, local
DEFAULT_LLM_MODEL=gpt-4      # gpt-4, gpt-3.5-turbo, claude-3-opus, etc.
LOCAL_LLM_PATH=               # ローカルモデルのパス（使用する場合）

# データベース設定
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB=jarviee

VECTOR_DB_TYPE=qdrant  # qdrant, faiss, milvus
VECTOR_DB_PATH=./data/vector_db  # ローカルベクトルDBのパス
VECTOR_DB_URI=         # リモートベクトルDBの場合のURI

# API設定（将来的に使用）
API_HOST=localhost
API_PORT=8000
API_SECRET_KEY=generate_a_secure_secret_key_here

# セキュリティ設定
SECURITY_LEVEL=medium  # low, medium, high
ENABLE_ENCRYPTION=true  # true, false
ENCRYPTION_KEY=generate_a_secure_encryption_key_here

# 自律行動設定
AUTONOMY_LEVEL=limited  # minimal, limited, standard, extended
ACTION_APPROVAL_REQUIRED=true  # true, false - 危険な行動に対する承認要求

# プログラミング支援設定
DEFAULT_CODE_LANGUAGE=python  # python, javascript, etc.
CODE_QUALITY_CHECK=true  # true, false - コード品質チェックの有効化
